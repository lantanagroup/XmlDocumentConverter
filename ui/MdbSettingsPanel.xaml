<UserControl x:Class="LantanaGroup.XmlDocumentConverter.UI.MdbSettingsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LantanaGroup.XmlDocumentConverter.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="300" Width="30*" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label x:Name="OutputDirectoryLabel" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Content="What directory should the converted files be saved to?" Margin="5,2"/>
        <TextBox x:Name="OutputDirectoryText" Grid.Row="1" Grid.Column="0" IsReadOnly="true" Margin="5,2" />
        <Button x:Name="OutputDirectoryButton" Grid.Row="1" Grid.Column="1" Content="Select" Margin="5,2" Click="OutputDirectoryButton_Click" />
    </Grid>
</UserControl>
